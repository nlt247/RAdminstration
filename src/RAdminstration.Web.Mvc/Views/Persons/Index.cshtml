@using RAdminstration.Web.Startup
@using RAdminstration.Web.Models.Person
@using Abp.Application.Services.Dto
@using RAdminstration.PhoneBooks.Dto
@model PagedResultDto<PersonListDto>
@{ 
    ViewBag.Title = L("Persons");
    ViewBag.CurrentPageName = PageNames.Persons; 
}
@section scripts
{
    <environment names="Development">
        <script src="~/libs/chartjs/dist/Chart.js" asp-append-version="true"></script>
        <script src="~/view-resources/Views/Persons/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/_Bundles/home-index.min.js" asp-append-version="true"></script>
    </environment>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("Persons")</h1>
            </div>
            <div class="col-sm-6">
                <a href="javascript:;" data-toggle="modal" data-target="#PronseCreateModal" class="btn bg-blue float-sm-right">
                    <i class="fa fa-plus-square"></i>
                    @L("Create")
                </a>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <!--Use for bulk actions-->
                            </div>
                            <div class="col-md-6">
                                @await Html.PartialAsync("~/Views/Users/Index.AdvancedSearch.cshtml")
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="PersonTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>@L("Name")</th>
                                        <th>@L("EmailAddress")</th>
                                        <th>@L("Address")</th>
                                        <th>@L("CreationTime")</th>
                                        <th style="width: 150px">@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @*@foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td></td>
                                            <td>@item.Name</td>
                                            <td>@item.EmailAddress</td>
                                            <td>@item.Address</td>
                                            <td>@item.CreationTime</td>
                                            <td>
                                                <button type="button" class="btn btn-sm bg-secondary edit-role" data-role-id="@item.Id" data-toggle="modal">
                                                    <i class="fas fa-pencil-alt"></i>
                                                    @L("Edit")
                                                </button>
                                            </td>
                                        </tr>
                                    }*@
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@await Html.PartialAsync("~/Views/Users/_CreateModal.cshtml")

<div class="modal fade" id="PersonEditModal" tabindex="-1" role="dialog" aria-labelledby="PersonEditModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>
